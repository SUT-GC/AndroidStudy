<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/additem_content_all"
              android:background="@color/contentback"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/input_head"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="3dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_item_head"
            android:background="@color/contentback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="24sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:hint="@string/title_hint"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item_content"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="3dp"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_item_content"
                android:background="@color/contentback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="left|top"
                android:hint="@string/content_hint"
                />
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/input_item_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                />
            <Spinner
                android:id="@+id/input_item_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:entries="@array/labels"
                >
            </Spinner>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="bottom|right"
        >
        <Button
            android:id="@+id/button_save_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_button"
            />
        <Button
            android:id="@+id/button_cancel_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_button"
            />
    </LinearLayout>


</LinearLayout>